{
  "name": "@adhesivejs/react",
  "version": "0.6.2",
  "description": "React adapter for Adhesive - A modern, performant, lightweight, dependency free, cross platform solution for flexible sticky positioned elements",
  "type": "module",
  "keywords": [
    "sticky",
    "position",
    "elements",
    "react"
  ],
  "license": "MIT",
  "homepage": "https://github.com/adhesivejs/adhesive/tree/main/packages/react#readme",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/adhesivejs/adhesive.git"
  },
  "author": {
    "name": "Daniel Waltz",
    "email": "danielbwaltz@gmail.com",
    "url": "https://danielwaltz.me/"
  },
  "files": [
    "dist"
  ],
  "main": "./dist/index.js",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": "./dist/index.js",
    "./package.json": "./package.json"
  },
  "scripts": {
    "build": "tsdown",
    "lint": "eslint",
    "prepack": "pnpm build",
    "release:bump": "changelogen --bump",
    "release:publish": "pnpm publish && pnpx jsr publish",
    "test:attw": "attw --pack --profile esm-only",
    "test:jsr": "pnpx jsr publish --dry-run --allow-dirty",
    "test:publint": "publint",
    "test:publish": "pnpm test:attw && pnpm test:jsr && pnpm test:publint",
    "type-check": "tsc --noEmit"
  },
  "peerDependencies": {
    "react": "^18.0.0 || ^19.0.0"
  },
  "dependencies": {
    "@adhesivejs/core": "workspace:*"
  },
  "devDependencies": {
    "@types/react": "catalog:"
  },
  "engines": {
    "node": "^20.19.0 || >=22.12.0"
  }
}
